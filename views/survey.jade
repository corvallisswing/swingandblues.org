extends app

block append meta
    meta(name="description" content="Survey for Corvallis Swing and Blues Weekend.")

block append stylesheets
    link(href='//fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css')
    link(href='//fonts.googleapis.com/css?family=Titillium+Web:400,700' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='/css/survey.css')

block append controllers
    script(src="/js/jQueryThings.js")
    script(src="/js/lib/store/store.min.js")
    script(src="/js/controllers/surveyCtrl.js")
    script(src="/js/services/surveySession.js")
    script(src="/js/services/surveyFlow.js")
    //- Session data
    script.
        app.value("survey", !{JSON.stringify(survey)});

    script.
        $(function () {
            var element = $('.survey-content');
            if (element.height() < window.innerHeight) {
                element.css('min-height', window.innerHeight + 'px');
            }
        });

block append content
    .content(ng-controller="SurveyCtrl")
        .container
            .curtain.col-xs-12
                .col-sm-offset-2.col-md-offset-3.col-sm-8.col-md-6.survey-content.clearfix.visible-xs-12
                    .relative-block
                        h1 <a href="/">Swing <span>&amp;</span> Blues Weekend</a>
                        h2 Corvallis, Oregon
                        block form