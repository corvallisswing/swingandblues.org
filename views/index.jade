extends layout

block meta
    meta(name="description" content="Corvallis Swing and Blues Weekend. Jan 23-25, 2015. Three nights of swing and blues dancing and live music in the heart of the Willamette Valley.")

block stylesheets
    link(href='//fonts.googleapis.com/css?family=Titillium+Web:400,700' rel='stylesheet' type='text/css')
    link(href='//fonts.googleapis.com/css?family=Bowlby+One' rel='stylesheet' type='text/css')
    link(rel='stylesheet', href='/css/index.css')


block content
    .content
        .container
            .curtain.row
                .things.col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
                    h1 Swing &amp; Blues Weekend
                    h2 Friday, Saturday, and Sunday in Corvallis,&nbsp;Oregon
                    .things-content-wrapper
                        .things-content
                            .row
                                .col-xs-4.col-sm-3.col-sm-offset-3.menu-item
                                    a(href="/schedule") Schedule
                                .col-xs-4.col-sm-3.menu-item
                                    a(href="/contact") Contact
                                .col-xs-4.col-sm-3.menu-item
                                    a(href="/guests") Guests

                            .tagline
                                p Welcome to Sunday! 

                                p Join us for a free, casual dance at Sunnyside Up Cafe, 116 NW 3rd St., with music
                                 | from Swing and a Ms from 2 until 4 p.m.

                            .clearfix
                                .feature
                                    a(href="https://www.google.com/maps/place/Sunnyside+Up/")
                                        img(src="/img/event/sunday-afternoon-map.png") 
                                    .name.clearfix Casual dance at 2 p.m. <a href="https://www.google.com/maps/place/Sunnyside+Up/">Map</a>.

                            .clearfix
                                .feature
                                    a(href="https://www.google.com/maps/place/Sunnyside+Up/")
                                        img(src="/img/swingAndMs.jpg") 
                                    .name.clearfix Swing and a Ms until 4 p.m.

                                p Doors open tonight at 7:45 p.m. at the Majestic Theatre, 115 SW 2nd St. We'll
                                 | be in the auditorium, on the main stage. 

                            .clearfix
                                .feature
                                    a(href="https://www.google.com/maps/place/Majestic+Theatre/")
                                        img(src="/img/event/sunday-evening-map.png") 
                                    .name.clearfix Dance begins at 8 p.m. $10. <a href="https://www.google.com/maps/place/Majestic+Theatre/">Map</a>.

                            p The Sunday dance has been the attendee favorite the past two years. The music
                             | will be swing, blues, and songs hand-picked for the occasion by the Corvallis
                             | DJ crew.

                            .clearfix
                                .feature
                                    img(src="/img/majesticStage.jpg")
                                    .name.clearfix Swing &amp; blues fusion dance until midnight.

                            .row
                                .col-xs-6.circle.blues
                                    .band Cherry &amp; the Lowboys
                                .col-xs-6.circle.swing
                                    .band Breakers Yard

                            .row
                                .col-xs-6.circle.swing
                                    .band Gumbo
                                .col-xs-6.circle.blues
                                    .band Kevin Selfe &amp; the Tornadoes

                            .row
                                .col-xs-6.circle.swing
                                    .band Swing &amp; a&nbsp;Ms.
                                .col-xs-6.circle.blues
                                    .band Late nights 'til&nbsp;3!

                            .logo
                                img(src="/img/weekend-dancers-300.png" width="300" title="Dance and celebrate!")
                    
                    p.tagline Hosted by the <a href="http://corvallisswing.com">Corvallis Swing Dance Society</a> and OSU Blues communities. â™¥

block append bottom-scripts
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script.
        $(function () {
            var element = $('.things');
            if (element.height() < window.innerHeight) {
                element.css('min-height', window.innerHeight + 'px');
            }
        });