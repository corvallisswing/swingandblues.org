doctype html
html(ng-app="project")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="keywords" content="corvallis lindy exchange, swing dancing, blues dancing")
    block meta

    meta(property="og:title" content="Corvallis Swing and Blues Weekend")
    meta(property="og:type" content="website")
    meta(property="og:image" content="http://#{host}/img/meta/facebook-banner.jpg")
    meta(property="og:image:secure_url" content="https://#{host}/img/meta/facebook-banner.jpg")
    meta(property="og:url" content="#{baseUrl}/")
    meta(property="og:description" content="Jan 23-25, 2015. Three nights of swing and blues dancing and live music in the heart of the Willamette Valley.")
    block open-graph

    link(rel="shortcut icon" href="/favicon.png" sizes="128x128")
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    //- Inline main.css since its small, as per Google PageSpeed suggestions.
    style.
      body {
          padding: 0;
          margin: 0;
          background-color: #651717;
      }

      .debug {
          border: solid 1px red !important;
      }

      @font-face {
          font-family: 'chalk-hand-lettering-shadedRg';
          src: url('https://s3-us-west-2.amazonaws.com/corvallisswing-fonts/chalk-hand-lettering-shaded_light-version-webfont.eot');
          src: url('https://s3-us-west-2.amazonaws.com/corvallisswing-fonts/chalk-hand-lettering-shaded_light-version-webfont.eot?#iefix') format('embedded-opentype'),
            url('https://s3-us-west-2.amazonaws.com/corvallisswing-fonts/chalk-hand-lettering-shaded_light-version-webfont.woff') format('woff'),
            url('https://s3-us-west-2.amazonaws.com/corvallisswing-fonts/chalk-hand-lettering-shaded_light-version-webfont.ttf') format('truetype');
          font-weight: normal;
          font-style: normal;
      }

    block stylesheets

    block scripts
    block controllers

    if (analyticsId)
        script.
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', '#{analyticsId}', 'auto');
          ga('send', 'pageview');

  body
    block content
    block bottom-scripts